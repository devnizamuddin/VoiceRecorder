<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_layout_backround"
    android:orientation="horizontal"
    android:weightSum="4"
    >

    <TextView
        android:id="@+id/recordingNameTv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_weight="2"
        android:text="2018 Oct 05 22:26:29_audio_record_3gp"
        android:textColor="@color/textColorDeep"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/recordingDurationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.64"
            />
        <TextView
            android:id="@+id/recordingSizeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.6 MB"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/recordingOptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/single_song_menu"
            />
    </LinearLayout>



</LinearLayout>
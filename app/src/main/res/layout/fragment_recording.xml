<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RecorderFragment">

    <Chronometer
        android:id="@+id/recordingTimeMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_red_stock"
        android:gravity="center"
        android:textColor="@color/textColorDeep"
        android:textSize="56dp" />

    <TextView
        android:id="@+id/recordUserHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56sp"
        android:text="Press the button to start record"
        android:textColor="@color/textColorDeep"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/recordBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/start_recording" />

</LinearLayout>